@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add a new Imagineer</h1>
<hr/>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.EngineerName)
  @Html.TextBoxFor(model => model.EngineerName)
  <br>
  @Html.LabelFor(model => model.ActiveIdle)
  @Html.CheckBoxFor(model => model.ActiveIdle, false)
  <br>
  @Html.LabelFor(model => model.LastLicensed)
  @Html.TextBoxFor(model => model.LastLicensed, new { type="date"})
  <br>
  <input type="submit" value="Add this Imagineer" />
}
<br>
<p>@Html.ActionLink("Back to Imagineer departement", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>