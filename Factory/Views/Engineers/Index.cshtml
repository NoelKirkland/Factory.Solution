@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Imagineer>;

<h1>Imagineers departement</h1>

@if (@Model.Count == 0)
{
  <h3>No Imagineers have been added yet!</h3>
} 

@foreach (Imagineer imagineer in Model)
{
  <li>@Html.ActionLink($"{imagineer.ImagineerName}", "Details", new { id = imagineer.ImagineerId })</li>
}

<p>@Html.ActionLink("Add new Imagineers", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>